<section class="products-grid" data-aos="fade-up">
  <div class="section-header">
    <h2 class="glitch-text">SEÇKİN KOLEKSİYON</h2>
  </div>
  <div class="product-container">
    {% for product in collections.all.products limit: 4 %}
      <div class="product-card" data-aos="zoom-in-up" data-aos-delay="{{ forloop.index | times: 100 }}">
        <div class="image-wrapper">
          <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}">
          <div class="overlay">
            <button class="view-btn">İNCELE</button>
          </div>
        </div>
        <div class="product-info">
          <h3>{{ product.title }}</h3>
          <p class="price">{{ product.price | money }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .products-grid { padding: 100px 5%; background: #000; }
  .section-header { text-align: center; margin-bottom: 60px; }
  .glitch-text { font-size: 3rem; letter-spacing: 10px; text-transform: uppercase; color: #fff; }
  .product-container { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 30px; }
  .product-card { background: #111; border: 1px solid #222; border-radius: 20px; overflow: hidden; transition: 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
  .product-card:hover { transform: translateY(-15px) scale(1.02); border-color: #fff; box-shadow: 0 20px 40px rgba(255,255,255,0.1); }
  .image-wrapper { position: relative; height: 350px; overflow: hidden; }
  .image-wrapper img { width: 100%; height: 100%; object-fit: cover; transition: 0.8s; }
  .product-card:hover img { transform: scale(1.1) rotate(2deg); }
  .overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; opacity: 0; transition: 0.3s; }
  .product-card:hover .overlay { opacity: 1; }
  .view-btn { padding: 12px 25px; border: none; background: #fff; color: #000; font-weight: bold; border-radius: 5px; cursor: pointer; }
  .product-info { padding: 20px; text-align: center; }
  .price { color: #888; font-size: 1.2rem; }
</style>

{% schema %}
{ "name": "Featured Products", "presets": [{ "name": "Featured Products" }] }
{% endschema %}
